<h3 class="text-center my-5">ログイン</h3>
<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field col-sm-4 offset-sm-4 mb-5">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field col-sm-4 offset-sm-4 mb-3">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field col-sm-4 offset-sm-4 mb-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "記憶させる" %>
      </div>
    <% end %>

    <div class="actions col-sm-4 offset-sm-4 d-grid text-center">
      <%= f.submit "ログイン", class: "btn btn-orange" %>
    </div>
    
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れた方", new_password_path(resource_name), class: "col-sm-4 offset-sm-4" %>
  <% end %>
</div>