<h3 class="text-center mt-3 mb-5">アカウント作成</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="row">
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field col-sm-2 offset-sm-4 mb-5">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "姓" %>
    </div>

    <div class="field col-sm-2 mb-5">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "名" %>
    </div>

    <div class="field col-sm-4 offset-sm-4 mb-4">
      <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "form-control", placeholder: "年齢" %>
    </div>

    <div class="field col-sm-6 offset-sm-4 mb-3">
      <%= f.label :gender, "性別", class: "form-check-label ms-2" %><br>
      <%= f.label :man, "男性", class: "form-check-label offset-1" %>
      <%= f.radio_button :gender, :man, class: "form-check-input" %>
      <%= f.label :woman, "女性", class: "form-check-label offset-1" %>
      <%= f.radio_button :gender, :woman, class: "form-check-input" %>
      <%= f.label :other, "未記入", class: "form-check-label offset-1" %>
      <%= f.radio_button :gender, :other, class: "form-check-input" %>
    </div>

    <div class="field col-sm-4 offset-sm-4 mb-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>

    <div class="field col-sm-4 offset-sm-4 mb-5">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(６文字以上)" %>
    </div>

    <div class="field col-sm-4 offset-sm-4 mb-5">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(確認)" %>
    </div>

    <div class="actions col-sm-4 offset-sm-4 d-grid text-center mb-5">
      <%= f.submit "登録", class: "btn btn-orange" %>
    </div>
  </div>
<% end %>

