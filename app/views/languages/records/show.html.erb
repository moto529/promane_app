<h3>record_show</h3>

<div>詳細:<%= @record.detail %></div>
<div>学習時間:<%= @record.time %></div>
<div>作成時:<%= @record.updated_at %></div>

<h3>record_edit</h3>

<%= form_with url: language_record_path(), model: @record do |f| %>
  <%= f.label :detail, "詳細" %><br>
  <%= f.text_area :detail %><br>
  <%= f.label :time, "学習時間" %><br>
  <%= f.number_field :time %><br>
  <%= f.submit "投稿" %>
<% end %>

<h3>record_destroy</h3>
<%= button_to "削除", language_record_path(@language.id, @record.id), method: :delete %>