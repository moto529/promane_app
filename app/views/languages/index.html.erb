<h3>new</h3>
<%= form_with model: @language do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
  <%= f.label :language, "言語" %>
  <%= f.text_field :language %><br>
  <%= f.submit "投稿" %>
<% end %>
<h3>index</h3>
<% @languages.each do |language| %>
  <%= language.language %><br>
  <%= link_to "学習を記録する", new_language_record_path(language.id) %>
  <%= link_to "詳細", language_path(language.id) %><br>
<% end %>