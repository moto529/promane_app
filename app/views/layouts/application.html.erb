<!DOCTYPE html>
<html>
  <head>
    <title>PromaneApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag('promane.ico') %>
  </head>

  <body class="bg-light">
    <%= render "layouts/header" %>
    <%= content_tag(:div, flash[:alert], class: "text-center bg-danger bg-opacity-50 fs-5") if flash[:alert] %>
    <%= content_tag(:div, flash[:notice], class: "text-center text-light bg-success bg-opacity-50") if flash[:notice] %>
    <%= yield %>
  </body>
</html>
